extends layout

block content
  .container
    form.form-signin(role='form', action="/register",method="post", style='max-width: 300px;')
      h2.form-signin-heading Rejestracja
      input.form-control(type='text', name="name", placeholder='Imię')
      input.form-control(type='text', name="username", placeholder='Nazwa użytkownika')
      input.form-control(type='password', name="password", placeholder='Hasło')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Zarejestruj