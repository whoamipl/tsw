extends layout
block content
  .container
    h2.form-signin-heading.mt-1 Logowanie
    form.mt-5.form-signin(role='form', action='/login', method='post')
      if (message)
        div.alert.alert-danger #{message}
      label.sr-only(for='inputEmail')
      input.form-control.m-1(type='text', name='username', id='inputEmail', placeholder='Nazwa użytkownika', required, autofocus)
      input.form-control.m-1(type='password', name='password', id='inputPassword', placeholder='Hasło')
      button.btn.btn-lg.btn-primary.btn-block.m-1(type='submit') Zaloguj